<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.6"
            android:background="@drawable/doctorbackground"
            android:elevation="0dp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/layout_margin_bottom"
        android:paddingLeft="@dimen/layout_margin_left"
        android:paddingRight="@dimen/layout_margin_right"
        android:paddingTop="@dimen/layout_margin_top">

        <TextView
            android:id="@+id/textView7"
            style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="Please Enter following test Information" />

        <EditText
            android:id="@+id/patientNameEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:ems="10"
            android:hint="Patient Name"
            android:inputType="none" />

        <Spinner
            android:id="@+id/NurseSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/BPLEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter BPL"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/BPHEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter BPH"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/LDLCholestrolEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter LDL cholestrol"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/HDLCholestrolEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="HDL cholestrol"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/MCHEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter MCH"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/ESREdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter ESR"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/PlateletCountEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter platelet count"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/temperatureEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter temperature"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/updateBtn"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onSubmitClick"
            android:text="Update" />
    </LinearLayout>
</RelativeLayout>
